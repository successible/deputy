{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/*.js",
      "!**/*.mjs",
      "!**/out",
      "!**/build",
      "!**/.next",
      "!**/.vscode"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "includes": ["**", "!**/server/makeTagPage.ts"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noForEach": "off",
        "noExcessiveCognitiveComplexity": "off",
        "noStaticOnlyClass": "off",
        "useSimplifiedLogicExpression": "off",
        "noCommaOperator": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "style": {
        "useNamingConvention": "off",
        "noDefaultExport": "off",
        "useBlockStatements": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": "off",
        "useIterableCallbackReturn": "off"
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  }
}
